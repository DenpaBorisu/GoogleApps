<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tobykurien.google_news"
    android:versionCode="18"
    android:versionName="1.18" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GoogleNewsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" >
                </category>
                <category android:name="android.intent.category.BROWSABLE" >
                </category>

                <data
                    android:host="google.com"
                    android:scheme="https" />
                <data
                    android:host="plus.google.com"
                    android:scheme="https" />
                <data
                    android:host="groups.google.com"
                    android:scheme="https" />
                <data
                    android:host="maps.google.com"
                    android:scheme="https" />
                <data
                    android:host="drive.google.com"
                    android:scheme="https" />
                <data
                    android:host="youtube.com"
                    android:scheme="https" />
                <data
                    android:host="gmail.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GoogleNewsActivityv11"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name=".Preferences"
            android:label="@string/app_name" />
        <activity
            android:name=".GPlusImageActivity"
            android:label="@string/title_activity_gplus_image" >
        </activity>
    </application>

</manifest>
